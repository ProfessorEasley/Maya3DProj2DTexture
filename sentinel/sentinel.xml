<?xml version="1.0"?>
<proj2tex>
    <!-- 
        This section specifies each of the projections and their orientation. 
        1. Each projection should be uniquely named
        2. Direction can be either "front", "side", or "back"
        3. imagePath is relative to the location of the configuration file and specifies
           where the projection's cropped screenshot is saved and read back from when combining layers.
    -->
    <projections>
        <projection>
            <name>frontProj</name>
            <direction>front</direction>
            <imagePath>front.png</imagePath>
        </projection>
        <projection>
            <name>sideProj</name>
            <direction>side</direction>
            <imagePath>side.png</imagePath>
        </projection>
        <projection>
            <name>backProj</name>
            <direction>back</direction>
            <imagePath>back.png</imagePath>
        </projection>
    </projections>

    <!-- 
        This section specifies how to combine the projections and whether the projection
        is used for color or transparency.

        The layers are specified in order from top to bottom:
        1. The layer should be uniquely named
        2. Each layer must have a colorProjectionName, which specifies the name of the projection 
           used for this layer's color.
        3. Use transparencyProjectionName to specify the projection used for transparency (optional for the last layer).
    -->
    <layers>
        <layer>
            <name>backLayer</name>
            <colorProjectionName>backProj</colorProjectionName>
            <transparencyProjectionName>sideProj</transparencyProjectionName>
        </layer>
        <layer>
            <name>frontLayer</name>
            <colorProjectionName>frontProj</colorProjectionName>
        </layer>
    </layers>

    <!-- Path where the combined texture should be saved. -->
    <combinedImagePath>combined.png</combinedImagePath>

    <!-- Padding percentage to introduce to the bounds of the projection images -->
    <projectionPaddingPercentage>10</projectionPaddingPercentage>

    <!-- Resolution of the viewport screenshot to take (note that the final cropped screenshot will be smaller than this). -->
    <screenshotResolution>
        <width>1280</width>
        <height>720</height>
    </screenshotResolution>

    <!-- Desired resolution of each of the converted textures and final combined texture. -->
    <bakedTextureResolution>
        <width>512</width>
        <height>512</height>
    </bakedTextureResolution>
</proj2tex>